{% extends '::admin/layoutAdmin.html.twig' %}

{% block bodyAdmin %}
    <h1>Utilisateurs list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>Adresses</th>
                <th>commandes</th>
            </tr>
        </thead>
        <tbody>
        {% for utilisateur in utilisateurs %}
            <tr>
                <td>{{ utilisateur.id }}</td>
                <td>{{ utilisateur.username }}</td>
                <td>{{ utilisateur.email }}</td>
                <td>
                    {% if utilisateur.adresses|length != 0 %}
                        <a href="{{ path('admin_utilisateurs_adresses_show', { 'id': utilisateur.id }) }}" title="Consulter les Adresses"><i class="icon-book"></i></a>
                    {% endif %}
                </td>
                <td>
                    {% if utilisateur.commandes|length != 0 %}
                        <a href="{{ path('admin_utilisateurs_factures_show', { 'id': utilisateur.id }) }}" title="Consulter les Factures"><i class="icon-book"></i></a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
        </tbody>
        <tbody>
        </tbody>
    </table>

    
{% endblock %}
