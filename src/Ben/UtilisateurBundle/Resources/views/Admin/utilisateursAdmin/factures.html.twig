{% extends '::admin/layoutAdmin.html.twig' %}

{% block bodyAdmin %}

        <h1>Liste des factures </h1>
        <h4>Utilisateur : {{ utilisateur.username }}</h4>

        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Références</th>
                <th>Date</th>
                <th>Prix TTC</th>
                <th>Voir</th>
            </tr>
            </thead>
            <tbody>
            {% if utilisateur.commandes|length == 0 %}
                <tr>
                    <td colspan="4">Aucune facture actuellement</td>
                </tr>
            {% endif %}
            {% for commande in utilisateur.commandes %}
                <tr>
                    <td>FA-{{ commande.reference }}</td>
                    <td>{{ commande.date|date('d/m/Y') }}</td>
                    <td>{{ commande.commande.prixTTC }} €</td>
                    <td><a href="{{ path('admin_factures_show', { 'id' : commande.id }) }}" target="_blank"><i class="icon-print"></i></a></td>
                </tr>
            {% endfor %}

            </tbody>

        </table>
{% endblock %}
