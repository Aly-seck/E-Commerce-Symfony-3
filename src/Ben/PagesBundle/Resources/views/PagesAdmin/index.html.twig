{% extends '::admin/layoutAdmin.html.twig' %}

{% block bodyAdmin %}

    <h1>Listes des Pages</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.titre }}</td>
                <td>

                            <a href="{{ path('admin_pages_show', { 'id': page.id }) }}"><i class="icon-eye-open"></i></a>

                            <a href="{{ path('admin_pages_edit', { 'id': page.id }) }}"><i class="icon-edit"></i></a>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_pages_new') }}">Cr√©er une nouvelle page</a>
        </li>
    </ul>
{% endblock %}
